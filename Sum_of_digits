class Sum_of_digits
{
    public static void main(int n)
    {
        int r,sum=0;
        if(n>=1 && n<= 1000000)
        {
        while(n>0) 
        {
            r=n%10;
            sum=sum+r;
            n=n/10;
        }
        System.out.println("Sum of the digits is "+sum);
    }
    else 
    System.out.println("Not valid");
    }
}
